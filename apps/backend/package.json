{
  "name": "backend",
  "version": "0.1.0",
  "description": "NestJS backend application for Orchestr-AI",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "clean": "rimraf dist coverage",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:migrate": "NODE_OPTIONS='-r dotenv/config' pnpm exec mikro-orm migration:up",
    "db:migrate:generate": "NODE_OPTIONS='-r dotenv/config' pnpm exec mikro-orm migration:create",
    "db:migrate:revert": "NODE_OPTIONS='-r dotenv/config' pnpm exec mikro-orm migration:down",
    "db:migrate:show": "NODE_OPTIONS='-r dotenv/config' pnpm exec mikro-orm migration:list",
    "db:migrate:pending": "NODE_OPTIONS='-r dotenv/config' pnpm exec mikro-orm migration:pending",
    "db:migrate:check": "NODE_OPTIONS='-r dotenv/config' pnpm exec mikro-orm migration:check"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/database/mikro-orm.config.ts",
      "./dist/database/mikro-orm.config.js"
    ]
  },
  "dependencies": {
    "@mikro-orm/core": "^6.6.1",
    "@mikro-orm/migrations": "^6.6.1",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.6.1",
    "@nestjs/bullmq": "^10.1.1",
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^5.1.1",
    "@orchestr-ai/shared": "workspace:*",
    "bullmq": "^5.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "ioredis": "^5.4.1",
    "nestjs-pino": "^4.5.0",
    "pg": "^8.13.1",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.6.1",
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.4.20",
    "@orchestr-ai/config": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.18.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}

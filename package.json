{
  "name": "orchestr-ai",
  "version": "0.1.0",
  "private": true,
  "description": "Automatic analysis and visualization of microservice architectures",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:frontend": "turbo run dev --filter=frontend",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "turbo run db:migrate --filter=backend",
    "db:migrate:generate": "turbo run db:migrate:generate --filter=backend",
    "db:migrate:revert": "turbo run db:migrate:revert --filter=backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "overrides": {
      "glob": "^10.4.5",
      "rimraf": "^5.0.7"
    }
  }
}


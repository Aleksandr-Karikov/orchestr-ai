# pnpm configuration
# Enable strict peer dependencies
strict-peer-dependencies=false

# Hoist dependencies to root node_modules for better compatibility
# This allows packages to access dependencies from workspace root
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=*turbo*

# Shamefully hoist all dependencies (for better compatibility with tools that don't understand pnpm)
# This can be removed if we encounter issues, but helps with tooling compatibility
shamefully-hoist=false

# Auto install peers
auto-install-peers=true

# Store location (optional, uses default if not specified)
# store-dir=.pnpm-store

